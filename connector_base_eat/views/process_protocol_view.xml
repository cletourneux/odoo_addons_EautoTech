<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="eat_process_protocol_form" model="ir.ui.view">
            <field name="name">Process Protocol Form</field>
            <field name="model">process.protocol.eat</field>
            <field name="arch" type="xml">
                <form string="Process Protocol">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="process"/>
                                <field name="mapper"/>
                                <field name="business_type"/>
                            </group>
                            <group>
                                <field name="process_type"/>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="eat_process_protocol_tree" model="ir.ui.view">
            <field name="name">Process Protocol Tree</field>
            <field name="model">process.protocol.eat</field>
            <field name="arch" type="xml">
                <list string="Process Protocol">
                    <field name="name"/>
                    <field name="process"/>
                    <field name="mapper"/>
                    <field name="business_type"/>
                    <field name="process_type"/>
                </list>
            </field>
        </record>

        <record id="eat_process_protocol_search" model="ir.ui.view">
            <field name="name">Process Protocol Search</field>
            <field name="model">process.protocol.eat</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Process Protocol">
                    <field name="name"/>
                    <field name="mapper"/>
                </search>
            </field>
        </record>
        
        <record id="eat_process_protocol_action" model="ir.actions.act_window">
            <field name="name">Process Protocol</field>
            <field name="res_model">process.protocol.eat</field>
            <field name="view_id" ref="eat_process_protocol_tree"/>
		    <field name="search_view_id" ref="eat_process_protocol_search"/>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>