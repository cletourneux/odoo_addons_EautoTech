<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="eat_product_instance_form" model="ir.ui.view">
            <field name="name">Product Instance Form</field>
            <field name="model">product.product.instance.eat</field>
            <field name="arch" type="xml">
                <form string="Product Instance">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="instance_id"/>
                                <field name="track_quantity"/>
                                <field name="manual_inventory"/>
                            </group>
                            <group>
                                <field name="instance_product_id"/>
                                <field name="instance_inventory_id"/>
                                <field name="selling_without_stock"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="eat_product_instance_tree" model="ir.ui.view">
            <field name="name">Product Instance Tree</field>
            <field name="model">product.product.instance.eat</field>
            <field name="arch" type="xml">
                <list string="Product Instance">
                    <field name="product_id"/>
                    <field name="instance_id"/>
                    <field name="instance_product_id"/>
                    <field name="instance_inventory_id"/>
                </list>
            </field>
        </record>

        <record id="eat_product_instance_search" model="ir.ui.view">
            <field name="name">Product Instance Search</field>
            <field name="model">product.product.instance.eat</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Product Instance">
                    <field name="product_id"/>
                    <field name="instance_inventory_id"/>
                </search>
            </field>
        </record>
        
        <record id="eat_product_instance_action" model="ir.actions.act_window">
            <field name="name">Product Instance</field>
            <field name="res_model">product.product.instance.eat</field>
            <field name="view_id" ref="eat_product_instance_tree"/>
		    <field name="search_view_id" ref="eat_product_instance_search"/>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>